<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
</head>
<body>
    <%- include('../partials/nav_fotter.ejs')  %>
    <div class="prof-contain  ">
        <div class="prof">
            
                <!-- <div><%= user.id %></div> -->
                <div class="profile-pic">
                    <span><%= user.name.charAt(0).toUpperCase() %></span>
                </div>
                <div> <%= user.name %></div>
                <div> <i class="zmdi zmdi-email"></i><%= user.email %></div>
                <div><i class="zmdi zmdi-calendar"></i> Member since <%= new
              Date(user.createdAt).toLocaleDateString() %></div>
               
        </div>
        <div>
            <div class="veri">
            <!-- <% if(user.isEmailValid) { %>
                <span><i class="zmdi zmdi-check-circle"></i>verified</span>
                <% }else { %>
                <span class=""><i class="zmdi zmdi-alert-circle"></i> Not verified</span>
                <div>
                    <a class="verify-btn" href="/verify-email">Verify Now</a>
                </div>
                
                <% } %> -->

                <% if(user.isEmailValid) { %>
                    <span class="verified"><i class="zmdi zmdi-check-circle"></i> Verified</span>
                <% } else { %>
                    <span class="not-verified"><i class="zmdi zmdi-alert-circle"></i> Not Verified</span>
                    <div>
                        <a class="verify-btn" href="/verify-email">Verify Now</a>
                    </div>
                <% } %>
                </div>
                    <div class="edit">
                    <div>
                        <a class="verify-btn" href="/edit-profile">Edit Profile</a>
                    </div>

                    <!-- <div>
                        <a class="verify-btn" href="/change-password">Change Password</a>
                    </div> -->

<!------------------------------For demo email-------------- -->
                    <div>
                        <% if (user.email === "test@gmail.com") { %>
                            <button class="verify-btn" type="button" onclick="showDemoMsg()">
                                Change Password
                            </button>
                            <p id="demo-msg" class="flash-error" style="display: none;">
                                Password change is disabled for the demo account.
                            </p>
                        <% } else { %>
                            <a class="verify-btn" href="/change-password">Change Password</a>
                        <% } %>
                    </div>

                    <script>
                        function showDemoMsg() {
                            document.getElementById("demo-msg").style.display = "block";
                        }
                    </script>
<!--     ---------------------------------------------------- -->
                </div>
         </div>
     </div>
  <%- include('../partials/fotter.ejs')  %>
</body>
</html>